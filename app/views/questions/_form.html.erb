<%= form_with(model: [survey, question], class: "space-y-6", data: { controller: "question-form", action: "submit->question-form#beforeSubmit" }) do |form| %>
  <% if question.errors.any? %>
    <div class="bg-red-50 p-4 rounded-md">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% question.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :content, "Question Text", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.text_area :content, rows: 3, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
    </div>
  </div>

  <div>
    <%= form.label :question_type, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.select :question_type, Question::QUESTION_TYPES.map { |type| [type.humanize, type] }, {}, 
          class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
          data: { action: "change->question-form#onTypeChange" , question_form_target: "questionType" } %>
    </div>
    <p class="mt-2 text-sm text-gray-500">
      Select the type of question.
    </p>
  </div>

  <div id="options-field" class="<%= ['multiple_choice', 'checkbox'].include?(question.question_type) ? '' : 'hidden' %>" data-question-form-target="optionsField">
    <%= form.label :options, "Options (one per line)", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.text_area :options, value: question.options&.join("\n"), rows: 5, 
          class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
          placeholder: "Option 1\nOption 2\nOption 3",
          data: { action: "input->question-form#onOptionsChange", question_form_target: "optionsTextarea" } %>
    </div>
    <p class="mt-2 text-sm text-gray-500">
      Enter each option on a new line.
    </p>
  </div>

  <%# Branching UI block: %>
  <%# - Checkbox toggles branching via Stimulus (change->question-form#toggleBranchingField). %>
  <%# - Hidden field :branch carries a JSON map built client-side before submit. %>
  <%# - data-questions supplies [{id,label}] for the "go to" <select> options. %>
  <%# - Rows are injected into #branching-rows by Stimulus; blank = default flow, END = terminate. %>
  <%# - Security: labels are HTML-escaped in JS before insertion to prevent XSS. %>
  <div class="mt-4">
    <div class="flex items-start">
      <div class="flex items-center h-5">
        <input id="question_branching_enabled" type="checkbox" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" data-question-form-target="branchingEnabled" data-action="change->question-form#toggleBranchingField">
      </div>
      <div class="ml-3 text-sm">
        <label for="question_branching_enabled" class="font-medium text-gray-700">Enable branching for this question</label>
        <p class="text-gray-500">Map specific responses to branch labels.</p>
      </div>
    </div>

    <%= form.hidden_field :branch, id: "question_branch", data: { question_form_target: "branchHidden" } %>
            
    <% questions_for_branching = survey.questions.order(:position).map { |q| { id: q.id, label: "Q#{q.position}: #{q.content.to_s.truncate(60)}" } } %>
    <div id="branching-field" class="hidden mt-3" data-question-form-target="branchingField" data-questions='<%= raw(questions_for_branching.to_json) %>'>
      <label class="block text-sm font-medium text-gray-700">Branching rules</label>
      <div class="mt-2 border border-gray-200 rounded-md">
        <div class="bg-gray-50 px-4 py-2 text-xs font-semibold text-gray-700 uppercase tracking-wide">Response → Branch label</div>
        <div id="branching-rows" class="divide-y divide-gray-200" data-question-form-target="branchingRows">
          <!-- Rows dynamically generated by Stimulus -->
        </div>
      </div>
      <p class="mt-2 text-sm text-gray-500">Select which question to go to next for each response. Choose “End of survey” to finish.</p>
    </div>
  </div>

  <div>
    <%= form.label :position, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.number_field :position, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
    </div>
    <p class="mt-2 text-sm text-gray-500">
      Order in which the question appears in the survey.
    </p>
  </div>

  <div class="flex items-start">
    <div class="flex items-center h-5">
      <%= form.check_box :required, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
    </div>
    <div class="ml-3 text-sm">
      <%= form.label :required, "Required", class: "font-medium text-gray-700" %>
      <p class="text-gray-500">Check if this question must be answered.</p>
    </div>
  </div>

  <div class="flex justify-end">
    <%= link_to "Cancel", survey_path(survey), class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <%= form.submit class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %> 